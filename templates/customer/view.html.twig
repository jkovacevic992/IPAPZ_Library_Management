{% extends 'base.html.twig' %}

{% block body %}
    <div class="row mt-3">
        <div class="col-lg-12">
            <div class="jumbotron">
                <div class="row">
                    <div class="col-lg-3">
                        <p class="text-muted">{{ customer.firstName }} {{ customer.lastName }}</p>
                    </div>

                </div>
