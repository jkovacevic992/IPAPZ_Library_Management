{% extends 'base.html.twig' %}

{% block body %}
    <h3>Borrowed books</h3>
    {% for borrowedBook in borrowed %}
        <div class="row mt-3">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-subtitle mt-2 text-muted">
                            User: {{ borrowedBook.user.firstName }} {{ borrowedBook.user.lastName }} </h5>
                        <h5 class="card-subtitle mt-2 text-muted">Days Late: {{ daysLate[borrowedBook.id] }} </h5>
                        <h5 class="card-subtitle mt-2 text-muted">Fee: {{ lateFee[borrowedBook.id] }} USD</h5>
                        <h5 class="card-subtitle mt-2 text-muted">Books:</h5>
                        <ul>
                        {% for book in borrowedBook.borrowedBooks %}

                                <li class="card-subtitle mt-2 text-muted">{{ book.book.name }}  </li>

                        {% endfor %}
                        </ul>
                            <a href="{{ path('books_details', {'id': borrowedBook.id}) }}"
                           class="btn btn-primary">Details</a>
                        <a href="{{ path('return_books', {id: borrowedBook.id}) }}" class="btn btn-danger">Return all books</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
