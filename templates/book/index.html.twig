{% extends 'base.html.twig' %}

{% block body %}
    <h5>Number of library users: {{ customers }}</h5>
    <h5>Number of books in the library: {{ bookNumber }}</h5>

    <h3>Books</h3>
    {% for book in books %}
        <div class="row mt-3">
             <div class="col-lg-6">
                 <div class="card">
                    <div class="card-body">
                        <h6 class="card-subtitle mt-2 text-muted">{{ book.author }}</h6>
                        <p class="card-text">{{ book.name }}</p>
                        <p class="card-text">Genre: {{ book.genre }}</p>

                     </div>
                 </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
