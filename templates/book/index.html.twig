{% extends 'base.html.twig' %}

{% block body %}
    {% for book in books %}
        <div class="row mt-3">
             <div class="col-lg-6">
                 <div class="card">
                    <div class="card-body">
                        <h6 class="card-subtitle mt-2 text-muted">{{ book.author }}</h6>
                        <p class="card-text">{{ book.name }}</p>

                     </div>
                 </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
