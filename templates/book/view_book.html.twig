{% extends 'base.html.twig' %}

{% block body %}
    <div class="row mt-3">
        <div class="col-lg-12">
            <div class="jumbotron">
                <div class="row">
                    <div class="col-lg-3">
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                            <br/><a href="{{ path('edit_book', {'id': book.id}) }}" class="card-link">Change info</a>
                        {% endif %}
                        <h6 class="card-subtitle mt-2 text-muted">{{ book.author }}</h6>
                        <p class="card-text">{{ book.name }}</p>
                        <p class="card-text">Genre: {{ book.genre.name }}</p>

                        {% if book.images != null %}
                           {% for image in book.images %}
                            <a href="{{ path('set_main_image', {'id': book.id,'imageName': image}) }} "/> <img style="max-height: 100px" src="../../uploads/images/{{image}}"><a/><br/>
                            {% endfor %}
                        {% endif %}
                        <br/><p>Summary:</p>
                        <p class="text-left">{{ book.summary }}</p>
                    </div>



                </div>





            </div>
        </div>
    </div>



{% endblock %}
