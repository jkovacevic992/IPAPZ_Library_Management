{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center">
    <h3 class="align-middle">Subscription history for {{ user.fullName }}</h3>
    </div>
    <table class="table table-striped table-row-counter">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Paid</th>
        <th scope="col">Active Until</th>
        <th scope="col">Active</th>
    </tr>
    </thead>
    <tbody>
    {% for subscription in user.subscription %}
        <tr>
            <td>{{ subscription.id }}</td>
            <td>{{ subscription.createdAt|date("d.m.Y") }}</td>
            <td>{{ subscription.createdAt|date_modify("+30 day")|date("d.m.Y") }}</td>
            <td>
            {% if subscription.active %}
                YES
            {% else %}
                NO
                {% endif %}
            </td>
        </tr>



    {% endfor %}
    </tbody>
{% endblock %}